<% layout('layouts/boilerplate') %>

<script>
  const maptilerApiKey = "<%- process.env.MAPTILER_API_KEY %>";
  const campgrounds ={features: <%- JSON.stringify(camps) %>};
</script>

<div
  id="map"
  style="width: 100%; height: 400px"
  class="mt-3 border border-2 rounded"
></div>
<h1 class="m-3">All Campgrounds</h1>

<div class="container">
  <div class="row">
    <% for(let camp of camps){ %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <img
          crossorigin="anonymous"
          src="<%= camp.image[0].url %>"
          alt=""
          class="card-img-top img-fluid"
        />
        <div class="card-body">
          <h5 class="card-title"><%= camp.title %></h5>
          <p class="card-text"><%= camp.description %></p>
          <p class="card-text"><%= camp.location %></p>
          <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary"
            >View Campground</a
          >
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>

<script src="/javascripts/clusterMap.js"></script>
